<% if signed_in? %>
<div class ="half-container" style="width:36.5%;display:inline-block;vertical-align:top">
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/microposts_form' %>
      </section>
    </aside>
  </div>
</div>
<div class ="half-container" style="width:60.5%;display:inline-block">
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
</div>

<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Norex App</h1>
   <h2>
    This is the home page for the
    <a href="http://sitebynorex.com/">Ruby on Rails Norex</a>
    sample application.
  </h2>

    <%= link_to "Sign up now!", new_user_registration_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>