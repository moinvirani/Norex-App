
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>


<div class="row">
  <div class="span9 offset4">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>
  <br>
  <div class="field"><%= f.label :username %>
    <%= f.text_field :username %>
  </div>
<br>
  <div class="field"><%= f.label :password %>
  <%= f.password_field :password %></div>
<br>
  <div class="field"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
<br>
  <div class="field"><%= f.submit "Create my account", class: "btn btn-large btn-primary"  %></div>
<% end %>
</div>
</div>
<%= render "devise/shared/links" %>

