<% provide(:title, @user.username) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>

      <%= link_to "Edit Profile", edit_user_registration_path %>
    </section>
  </aside>

  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol clss="microposts">
        <%= render 'micropost_list' %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>